@using Squabby.Models.ViewModels
@model Squabby.Models.ViewModels.Error
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="~/css/User/loginandregister.css">
    <script src="~/js/loginandregister.js"></script>
    <title>Login/Register</title>
    @if (Model != null)
    {
        if (Model.ErrorType == ErrorType.LoginError)
        {
            <style>
                #signin input
                {
                    border-style: solid !important;
                    border-width: 1px !important;
                    border-color: red !important;
                }
            </style> 
        }
        else if (Model.ErrorType == ErrorType.RegisterError)
        {
            <style>
                #register input
                {
                    border-style: solid !important;
                    border-width: 1px !important;
                    border-color: red !important;
                }
            </style> 
        }
    }
</head>
<body>
<div id="layer">
     <a href="/" id="logo">Squabby</a>
    <div id="menu">
        <div id="selector">
            <h1 id="registerselector" onclick="showRegister();">Register</h1>
            <h1 id="signinselector" class="unselected" onclick="showSignIn();">Sign In</h1>
        </div>
        <form id=register action="/register" method="post">
            <h2 class="inputname">Username</h2>
            <input type="username" name="username" required/>
            <h2 class="inputname">Password</h2>
            <input name="password" type="password" required/>
            <h2 class="inputname">Verify Password</h2>
            <input type="password" required/>
            <div class="line"></div>
            <button>Sign Up</button>
        </form>
        <form id=signin action="/login" method="post" class="unselectedform">
            <h2 class="inputname">Username</h2>
            <input name="username" type="username" required/>
            <h2 class="inputname">Password</h2>
            <input name="password" type="password" required/>
            <div class="line"></div>
            <button>Sign In</button>
        </form>
    </div>
</div>
</body>
</html>